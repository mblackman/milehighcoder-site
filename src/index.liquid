---
layout: layouts/default.liquid
---

<div class="main-sections">
  <section>
    <div class="prose">
      <h2>Latest</h2>
    </div>
    {% assign posts = collections.posts %}
    {% assign count = 1 %}
    {% include "postlist.liquid" %}
  </section>

  {% assign tagList = collections | postTags %} {% if tagList.length > 0 %}
  <section class="prose">
    <h2>Topics</h2>
    {%- for tag in tagList -%}
    <a href="/tags/{{ tag.name }}">{{ tag.name }}({{ tag.count }})</a>{% if
    forloop.last != true %}<span>, </span>{% endif %} {%- endfor -%}
  </section>
  {% endif %}

  {% assign posts = collections.posts %} {% if posts.length > 5 %}
    <section class="prose">
      <h2>More articles</h2>
      
      {% assign count = 5 %}
      {% assign offset = 1 %}
      {% include "postlist.liquid" %}
      <a class="articles-link" href="/articles">All the articles</a>
    </section>
  {% endif %}
</div>

<style>
  .main-sections {
    display: flex;
    flex-direction: column;
    gap: var(--space-7);
  }
  .articles-link {
    display: block;
    margin-top: var(--space-4);
  }
</style>
